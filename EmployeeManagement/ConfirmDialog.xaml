<Window x:Class="EmployeeManagement.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagement"
        mc:Ignorable="d"
        Title="ConfirmDialog" Height="220" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Personal löschen" FontSize="30" Margin="20" HorizontalAlignment="Center"/>
        <TextBlock Text="Wollen Sie diese Person unwiderruflich löschen?" HorizontalAlignment="Center"/>
        <DockPanel Margin="50 20 ">
            <Button Name="btnCancel" Content="Abbrechen" Click="btnCancel_Click" />
            <Button Name="btnDelete" Content="Löschen" DockPanel.Dock="Right" Click="btnDelete_Click"/>
            <Separator DockPanel.Dock="Right" Visibility="Collapsed" />
        </DockPanel>
    </StackPanel>
</Window>
